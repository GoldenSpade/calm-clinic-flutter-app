<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust system certificates and user-added certificates -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust preinstalled CAs -->
            <certificates src="system" />
            <!-- Additionally trust user added CAs -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Domain-specific configuration for api.digitalunion.io -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.digitalunion.io</domain>
        <trust-anchors>
            <!-- Trust preinstalled CAs (includes Let's Encrypt) -->
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
